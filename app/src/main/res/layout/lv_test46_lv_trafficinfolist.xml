<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myroad_tv_roadid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路口 -1 " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配置信息" />

            <TextView
                android:id="@+id/myroad_tv_trafficlightinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红绿灯时长" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="横向状态: " />

                    <TextView
                        android:id="@+id/myroad_tv_horizontalstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="紫灯 -1 秒" />

                </LinearLayout>

                <TextView
                    android:id="@+id/myroad_tv_horizontalimgstatus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_oval_green" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="纵向状态: " />

                    <TextView
                        android:id="@+id/myroad_tv_verticalstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="紫灯 -1 秒" />

                </LinearLayout>

                <TextView
                    android:id="@+id/myroad_tv_verticalimgstatus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_oval_green" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人工控制" />

        <Button
            android:id="@+id/myroad_btn_horizontalcontrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="横向" />

        <Button
            android:id="@+id/myroad_btn_verticalcontrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纵向" />

    </LinearLayout>

</LinearLayout>